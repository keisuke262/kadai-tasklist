<h1>id : <%= @task.id %>のタスク詳細ページ</h1>

<table class="table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @task.id %></td>
    <tr>
    <tr>
        <th>タスク名</th>
        <td><%= @task.content %></td>
    </tr>
    <tr>
        <th>締め切り</th>
        <td><%= @task.deadline %></td>
    </tr>
    <tr>
        <th>進捗状況</th>
        <td><%= @task.status %></td>
    </tr>
</table>


<%= link_to 'このタスクを編集する', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'このタスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してもよろしいですか？'}, class: 'btn btn-danger' %>
<%= link_to '一覧に戻る', tasks_path, class: 'btn btn-primary' %>
