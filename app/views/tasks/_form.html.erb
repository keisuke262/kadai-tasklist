<%= form_with(model: task, local: true) do |f| %>
    <% if task.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% task.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content %>

    <%= f.label :deadline, '締め切り日' %>
    <%= f.text_field :deadline %>
    
    <%= f.submit '登録' %>
<% end %>